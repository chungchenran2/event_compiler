<div class="page-header">
	<h1>Event</h1>
</div>

<%= render @event_sjsu %>

<%= link_to "Home", event_sjsus_path, class: "btn btn-default" %>

<h3>Comments</h3>
<%= render @event_sjsu.comments %>

<h4>New Comment</h4>
<%= form_for [@event_sjsu, @event_sjsu.comments.build] do |f| %>
	<div class="form-group">
		<%= f.label :body %><br>
		<%= f.text_area :body, class: "form-control" %>
	</div>
	<%= f.hidden_field :event_sjsu_id %>
	<%= f.submit class: "btn btn-primary" %>
<% end %>
