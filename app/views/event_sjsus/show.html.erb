<div class="panel panel-default">
	<div class="panel-heading">
		<h2 class="panel-title"><%= @event_sjsu.title %></h2>
	</div>
	<div class="panel-body">
		<p><%= @event_sjsu.body %></p>
		<%= link_to 'Edit', edit_event_sjsu_path(@event_sjsu) %> |
		<%= link_to 'Back', event_sjsus_path %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Comments</h3>
	</div>
	<div class="panel-body">
		<%= render @event_sjsu.comments %>
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading">
		<h4 class="panel-title">New Comment</h4>
	</div>
	<div class="panel-body">
		<%= form_for [@event_sjsu, @event_sjsu.comments.build] do |f| %>
			<div class='field'>
				<%= f.label :author %><br>
				<%= f.text_field :author %>
			</div>
			<div class='field'>
				<%= f.label :body %><br>
				<%= f.text_area :body %>
			</div>
			<div class='actions'>
				<%= f.submit %>
			</div>
		<% end %>
	</div>
</div>
