  <%# @event_sjsus.each do |event_sjsu| %>
  <div class="panel panel-default">
  	<div class="panel-heading">
  		<h2 class="panel-title"><%= link_to event_sjsu.title, event_sjsu %></h2>
  	</div>
  	
  	<div class="panel-body">
  		<p><i><%= friendly_date event_sjsu.created_at %></i></p>
  		<p><em>By <%= event_sjsu.user.name %></em></p>
  		<p><%= event_sjsu.body %></p>
  		<p>
    		<%= link_to 'Edit', edit_event_sjsu_path(event_sjsu), class: "btn btn-default" %>
    		<%= link_to 'Destroy', event_sjsu, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  		</p>
  	</div>
  </div>
<%# end %>