<!DOCTYPE html>
<html>
<head>
  <title>EventCompiler</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<% if notice %>
			<div class="alert alert-success"><%= notice %></div>
		<% end %>
		<% if alert %>
			<div class="alert alert-danger"><%= alert %></div>
		<% end %>
		<div class="pull-right">
			<% if current_user %>
				<%= link_to 'New Event', new_event_sjsu_path, class: "btn btn-default" %>
				<%= link_to 'Log Out', logout_path, class: "btn btn-default" %>
			<% else %>
				<%= link_to 'Log In', login_path, class: "btn btn-default" %> or
				<%= link_to 'Sign Up', signup_path, class: "btn btn-default" %>
			<% end %>
		</div>

		<%= yield %>
	</div>
</body>
</html>
